
@{
    ViewBag.Title = "GameplayResult";
}

<h2>@ViewBag.Winner</h2>

Player's Score: @Session["User"]
Pokemon's: @Session["Comp"]

@if (ViewBag.Truth == "True")
{
    <a href="~/GamePlay/TournamentNext">Move?</a>
}
else if (ViewBag.Truth == "False")
{
    <a href="~/GamePlay/TournamentLoss">Move?</a>
}
else if (ViewBag.Truth == "Tie")
{
    <h3>For Pokemon's, Tie's are the same as losses. You may Hoop Again!</h3>
    <a href="~/GamePlay/OvertimeStart">Move?</a>
}



<br /><br /><a href="~/Home/PokeJam">@*Forfeit Round and*@ Go Home</a>

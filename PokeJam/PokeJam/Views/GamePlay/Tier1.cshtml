
@{
    ViewBag.Title = "Tier 1";
}
<center>
    <h2>Tier 1</h2>

    <h2>@Session["PlayType"] Mode</h2>


    <form action="~/GamePlay/HeadsTailsSingle/" method="post">

        <h3>Choose your opponent</h3>

        <style>
            .dropdown {
                background-color: red;
                color: white;
                padding: 16px;
                font-size: 16px;
                border: none;
                cursor: pointer;
            }

            .dropdown {
                position: relative;
                display: inline-block;
            }

            .btn-danger{
                height:50px;
                width: 75px;
            }
        </style>
        </head>
        <select class="dropdown" name="pokemon">
            @for (int i = 0; i < ViewBag.Poke.Count; i++)
            {
                var pokemon = ViewBag.Poke[i];
                <option value="@pokemon.PokeID">@pokemon.PokeName</option>
            }
        </select>
        <br />
        <br />
        <h3>This Decide Who Goes First. What's Your Pick</h3><br /><br />

        <input class="btn-danger" type="submit" name="Coin" value="Heads" />
        <input class="btn-danger" type="submit" name="Coin" value="Tails" />
    </form>
    <br />
    <br />



    <img src="~/Content/A3.jpg" height="430" width="550" />
</center>
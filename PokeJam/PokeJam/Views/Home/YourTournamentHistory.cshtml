
@{
    ViewBag.Title = "YourTournamentHistory";
}


<h2>Your Tournament History</h2>

<table class="table">
    <tr>
        <th>
            User Email
        </th>
        <th>
            Tier 1 Opponent
        </th>
        <th>
            Tier 1
        </th>
        <th>
            Tier 2 Opponent

        </th>
        <th>
            Tier 2

        </th>
        <th>
            Tier 3 Opponent

        </th>
        <th>
            Tier 3

        </th>
        <th>
            Tier 4 Opponent
        </th>
        <th>
            Tier 4
        </th>
        <th>
            Tier 5 Opponent

        </th>
        <th>
            Tier 5

        </th>

    </tr>

    @foreach (var item in ViewBag.Tournaments)
    {
        <tr>
            <td>
                @*@item.Id*@
                @item.AspNetUser.Email
            </td>
            <td>
                @item.P1
            </td>
            <td>
                @(item.T1 ? "Beat" : "Did not Beat")
            </td>
            <td>
                @item.P2
            </td>
            <td>
                @(item.T2 ? "Beat" : "Did not Beat")
            </td>
            <td>
                @item.P3
            </td>
            <td>
                @(item.T3 ? "Beat" : "Did not Beat")
            </td>
            <td>
                @item.P4
            </td>
            <td>
                @(item.T4 ? "Beat" : "Did not Beat")
            </td>
            <td>
                @item.P5
            </td>
            <td>
                @(item.T5 ? "Beat" : "Did not Beat")
            </td>

        </tr>
    }

</table>
<center>
    <img src="~/Content/A2 copy.jpg" height="430" width="500" />
</center>
<br />
<a href="~/Home/PokeJam/">PokeJam</a>

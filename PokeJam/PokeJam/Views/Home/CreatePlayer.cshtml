
@{
    ViewBag.Title = "CreatePlayer";
}
<br />
<h2>Create Player</h2>

<form action="~/Home/SuccessfullyCreatedChar/" method="post">
    Distribute 100 Skill Points into the the stats below to build your character how you want! You Will Not Be Able to Submit till 100 Points are Distributed<br /><br />
    The Three Types of Shots can have at most 75% Chance<br />
    The Steal and Block can at most have 25% Chance<br /><br /><br />

    <input type="hidden" name="CharName" value="@ViewBag.CharName" />
    <input type="hidden" name="CharHeight" value="@ViewBag.CharHeight" />
    <input type="hidden" name="CharWeight" value="@ViewBag.CharWeight" />

    ThreePoint %: <input type="number" id="ThreePointPerc" name="ThreePoint" min="@ViewBag.ThreePointWH" max="75" value="@ViewBag.ThreePointWH" /><br />

    FieldGoal %:<input type="number" id="FieldGoatPerc" name="FieldGoat" min="@ViewBag.FieldGoalWH" max="75" value="@ViewBag.FieldGoalWH" /><br />

    Paint %:<input type="number" id="PaintPerc" name="Paint" min="@ViewBag.PaintWH" max="75" value="@ViewBag.PaintWH" /><br />

    Steal %:<input type="number" id="StealPerc" name="Steal" min="@ViewBag.StealWH" max="25" value="@ViewBag.StealWH" /><br />

    Block %:<input type="number" id="BlockPerc" name="Block" min="@ViewBag.BlockWH" max="25" value="@ViewBag.BlockWH" /><br />

    <input type="submit" name="submit" value="Submit" />
</form>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        input[type=text], select, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 6px;
            margin-bottom: 16px;
            resize: vertical;
        }

        input[type=submit] {
            background-color: #4CAF50;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type=submit]:hover {
                background-color: #45a049;
            }

        .container {
            border-radius: 5px;
            padding: 20px;
        }
    </style>
</head>

</html>

    
<script>
    function Check() {
        var a = parseInt( document.getElementById("ThreePointPerc").value ) - @ViewBag.ThreePointWH;
        var b = parseInt( document.getElementById("FieldGoatPerc").value ) - @ViewBag.FieldGoalWH;
        var c = parseInt( document.getElementById("PaintPerc").value ) - @ViewBag.PaintWH;
        var d = parseInt( document.getElementById("StealPerc").value ) - @ViewBag.StealWH;
        var e = parseInt( document.getElementById("BlockPerc").value ) - @ViewBag.BlockWH;
        if ((100 - (a +b+c+d+e)) == 0) {
            return true;
        }
        else {
            return false;
        }

    }
</script>

